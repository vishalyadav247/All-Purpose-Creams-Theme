{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
  assign current_variant = product.selected_or_first_available_variant
  assign first_3d_model = product.media | where: 'media_type', 'model' | first
  assign media_ratio = section.settings.media_ratio

  if media_ratio == 'shortest'
    assign media_ratio = 0
    for media in product.media
      if media.preview_image.aspect_ratio > media_ratio
        assign media_ratio = media.preview_image.aspect_ratio
      endif
    endfor
  elsif media_ratio == 'tallest'
    assign media_ratio = 99
    for media in product.media
      if media.preview_image.aspect_ratio < media_ratio
        assign media_ratio = media.preview_image.aspect_ratio
      endif
    endfor
  endif
-%}

<link rel="stylesheet" href="{{ 'product.css' | asset_url }}">

{%- if product.media.size > 0 -%}
  <link rel="stylesheet" href="{{ 'media-gallery.css' | asset_url }}">
{%- endif -%}

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'append-modals.js' | asset_url }}" defer="defer"></script>

{%- if first_3d_model -%}
  <link
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
  <link rel="stylesheet" href="{{ 'model-viewer.css' | asset_url }}" media="print" onload="this.media='all'">
  <script src="{{ 'product-model.js' | asset_url }}" defer></script>
  <script type="application/json" id="product-json-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
{%- endif -%}

<append-modals class="section section--page-width product js-product" data-section="{{ section.id }}">
  {% render 'breadcrumbs', show_next_prev: true %}

  <div class="md:flex justify-center product-layout--{{ section.settings.media_size }}">
    <div class="product-media product-media--{{ section.settings.media_layout }}{% if section.settings.enable_border %} product-media--bordered{% endif %}">
      <div class="media-gallery{% if section.settings.enable_sticky_columns %} sticky-content{% endif %}">
        {%- if product.media.size > 0 -%}
          {% render 'media-gallery', product: product, media_ratio: media_ratio, first_3d_model: first_3d_model %}
        {%- else -%}
          <div class="media relative">
            {{ 'image' | placeholder_svg_tag: 'media__placeholder' }}
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="product-info z-1" data-cc-animate>
      <div
        {% if section.settings.enable_sticky_columns %}
          class="sticky-content"
        {% endif %}
      >
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              <div class="product-info__block" {{ block.shopify_attributes }}>
                {% render block %}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'title' -%}
              <div class="product-info__block product-info__block--title" {{ block.shopify_attributes }}>
                <h1 class="product-title h2">{{ product.title | escape }}</h1>
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'price' -%}
              <div class="product-info__block product-info__block--price" {{ block.shopify_attributes }}>
                <div class="flex flex-wrap items-baseline	justify-between">
                  <div class="product-info__price text-lg md:text-xl js-product-price">
                    {% render 'price', product: product, use_variant: true %}
                  </div>

                  {% if block.settings.show_rating and product.metafields.reviews.rating.value != blank -%}
                    <div class="whitespace-nowrap mt-1">
                      {% render 'rating',
                        rating_value: product.metafields.reviews.rating.value,
                        rating_count: product.metafields.reviews.rating_count,
                        rating_count_format: 'long'
                      %}
                    </div>
                  {%- endif -%}
                </div>

                {%- if block.settings.show_tax_and_shipping -%}
                  {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                    <div class="rte text-sm mt-1">
                      {%- if cart.taxes_included -%}
                        {{ 'products.product.include_taxes' | t }}
                      {%- endif -%}
                      {%- if shop.shipping_policy.body != blank -%}
                        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                {%- endif -%}

                {%- assign instalments_form_id = 'instalments-form-' | append: section.id -%}
                {%- form 'product', product, id: instalments_form_id, class: 'mt-2 text-sm js-instalments-form' -%}
                  <input type="hidden" name="id" value="{{ current_variant.id }}">
                  {{ form | payment_terms }}
                {%- endform -%}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'vendor-text' -%}
              {%- if product.vendor != blank -%}
                <div class="product-info__block product-info__block--tight" {{ block.shopify_attributes }}>
                  {%- comment -%}
                    If there's a collection with the same name as the vendor, link to it.
                    If not, link to the automatic vendor collection.
                  {%- endcomment -%}
                  {%- liquid
                    assign vendor_handle = product.vendor | handle
                    if collections[vendor_handle].handle == vendor_handle
                      assign vendor_url = collections[vendor_handle].url
                    else
                      assign vendor_url = product.vendor | url_for_vendor
                    endif
                  -%}
                  <p class="rte">
                    {% if block.settings.show_label %}{{ 'products.product.vendor' | t }}{% endif %}
                    {{ product.vendor | link_to: vendor_url }}
                  </p>
                </div>
              {%- endif -%}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'rating' -%}
              {%- if product.metafields.reviews.rating.value != blank -%}
                <div class="product-info__block product-info__block--tight" {{ block.shopify_attributes }}>
                  {% render 'rating',
                    rating_value: product.metafields.reviews.rating.value,
                    rating_count: product.metafields.reviews.rating_count,
                    rating_count_format: 'long'
                  %}
                </div>
              {%- endif -%}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'description' -%}
              {%- if section.settings.description_location == 'details' and product.description != blank -%}
                {%- if block.settings.show_as_collapsible_content -%}
                  <details-disclosure class="product-info__block product-disclosure" {{ block.shopify_attributes }}>
                    <details
                      class="disclosure disclosure--row"
                      {% if block.settings.open %}
                        open
                      {% endif %}
                    >
                      <summary>
                        <div class="flex justify-between items-center">
                          <span class="disclosure__title flex flex-auto items-center">
                            {%- if block.settings.icon != 'none' -%}
                              {% render 'icon', icon: block.settings.icon, width: 24, height: 24 %}
                            {%- endif -%}
                            {{ 'products.product.description' | t }}
                          </span>
                          <span class="disclosure__toggle">
                            {%- if settings.disclosure_toggle == 'plus' -%}
                              {% render 'icon-plus' %}
                            {%- else -%}
                              {% render 'icon-chevron-down' %}
                            {%- endif -%}
                          </span>
                        </div>
                      </summary>
                      <div class="disclosure__panel has-motion">
                        <div class="disclosure__content rte">
                          {{- product.description -}}
                        </div>
                      </div>
                    </details>
                  </details-disclosure>
                {%- else -%}
                  <div class="product-info__block product-description rte" {{ block.shopify_attributes }}>
                    {{- product.description -}}
                  </div>
                {%- endif -%}
              {%- endif -%}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'sku-text' -%}
              <div
                class="product-info__block product-info__block--tight product-sku"
                {% if current_variant.sku == blank %}
                  hidden
                {% endif %}
                {{ block.shopify_attributes }}
              >
                <span class="label label--inline">{{ 'products.product.sku' | t }}</span>
                <span class="product-sku__value">{{ current_variant.sku }}</span>
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'barcode-text' -%}
              <div
                class="product-info__block product-info__block--tight product-barcode"
                {% if current_variant.barcode == blank %}
                  hidden
                {% endif %}
                {{ block.shopify_attributes }}
              >
                <span class="label label--inline">{{ 'products.product.barcode' | t }}</span>
                <span class="product-barcode__value">{{ current_variant.barcode }}</span>
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}
            {% when 'Excerpt' %}
              {% if product.metafields.custom.short_excerpt %}
                <p class="Short-Excerpt">{{ product.metafields.custom.short_excerpt }}</p>
              {% endif %}
            {% when 'uses' %}
              {% if product.metafields.custom.uses_text %}
                <div
                  class="Uses-Text flex justify-center flex-wrap text-center"
                >
                  <strong>Uses: </strong>{{ product.metafields.custom.uses_text }}
                </div>
              {% endif %}

            {%- when 'variant-picker' -%}
              {%- unless product.has_only_default_variant -%}
                <div class="product-info__block product-options" {{ block.shopify_attributes }}>
                  {% render 'variant-picker',
                    product: product,
                    product_form_id: product_form_id,
                    media_ratio: media_ratio,
                    block: block,
                    update_url: true
                  %}
          {% if product.selected_or_first_available_variant.inventory_quantity > 0 %}
  <p class="in-stock-message">
    <img src="{{ 'icon-instock.svg' | asset_url }}" alt="In stock icon" width="20" height="20" style="display:inline-block; vertical-align:middle; margin-right:6px;">
    In stock â€“ Ready to ship
  </p>
{% endif %}
                {%- comment -%}    {% if product.selected_or_first_available_variant.available %}
                   <span></span> <p>In Stock Ready To Ship</p>
                  {% endif %}{%- endcomment -%}
                </div>
              {%- endunless -%}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'custom-option' -%}
              {% render 'custom-option', product_form_id: product_form_id, block: block %}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'buy-buttons' -%}
              <div class="product-info__block product-info__block--buy-buttons" {{ block.shopify_attributes }}>
                <product-form>
                  {%- render 'product-inventory', product: product, current_variant: current_variant, block: block -%}

                  <div class="alert mb-8 bg-error-bg text-error-text js-form-error" role="alert" hidden></div>
                  {%- form 'product', product, class: 'js-product-form', id: product_form_id -%}
                    {%- liquid
                      assign gift_card_recipient_feature_active = false
                      if block.settings.show_gift_card_recipient and product.gift_card?
                        assign gift_card_recipient_feature_active = true
                      endif

                      assign enable_dynamic_checkout = false
                      if block.settings.enable_dynamic_checkout and product.selling_plan_groups == empty and gift_card_recipient_feature_active == false
                        unless product.template_suffix contains 'preorder'
                          assign enable_dynamic_checkout = true
                        endunless
                      endif
                    -%}

                    {% if gift_card_recipient_feature_active %}
                      {% render 'gift-card-recipient', section: section %}
                    {% endif %}

                    <input type="hidden" name="id" value="{{ current_variant.id }}" disabled>

                    <div class="product-add flex flex-wrap items-end">
                      {%- if block.settings.show_qty_selector -%}
                        <div class="flex-none me-4">
                          {% render 'quantity-input', layout_style: 'combined', hide_label: true %}
                        </div>
                      {%- else -%}
                        <input type="hidden" name="quantity" value="1">
                      {%- endif -%}

                      {%- capture add_to_cart_text -%}
                        {%- if product.template_suffix contains 'preorder' -%}
                          {{- 'products.product.preorder' | t -}}
                        {%- else -%}
                          {{- 'products.product.add_to_cart' | t -}}
                        {%- endif -%}
                      {%- endcapture -%}

                      <button
                        data-add-to-cart-text="{{ add_to_cart_text | escape }}"
                        type="submit"
                        class="btn {% if enable_dynamic_checkout %}btn--secondary{% else %}btn--primary{% endif %} flex-1 self-start"
                        name="add"
                        {% if current_variant.available == false %}
                          disabled
                        {% endif %}
                      >
                        {%- if current_variant.available -%}
                          {{- add_to_cart_text -}}
                        {%- else -%}
                          {{- 'products.product.sold_out' | t -}}
                        {%- endif -%}
                      </button>

                      {%- if enable_dynamic_checkout -%}
                        <div class="product__dynamic-checkout-btn mt-2">
                          {{ form | payment_button }}
                        </div>
                      {%- endif -%}
                    </div>

                    {%- if block.settings.show_backorder_text -%}
                      {% render 'backorder', product: product, variant: current_variant %}
                    {%- endif -%}
                  {%- endform -%}
                </product-form>

                {%- if block.settings.show_pickup_availability -%}
                  {% render 'pickup-availability', current_variant: current_variant %}
                {%- endif -%}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'collapsible-content' -%}
              <details-disclosure class="product-info__block product-disclosure" {{ block.shopify_attributes }}>
                <details
                  class="disclosure disclosure--row"
                  {% if block.settings.open %}
                    open
                  {% endif %}
                >
                  <summary>
                    <div class="flex justify-between items-center">
                      <span class="disclosure__title flex flex-auto items-center">
                        {%- if block.settings.icon != 'none' -%}
                          {% render 'icon', icon: block.settings.icon, width: 24, height: 24 %}
                        {%- endif -%}
                        {{- block.settings.heading | default: block.settings.page.title -}}
                      </span>
                      <span class="disclosure__toggle">
                        {%- if settings.disclosure_toggle == 'plus' -%}
                          {% render 'icon-plus' %}
                        {%- else -%}
                          {% render 'icon-chevron-down' %}
                        {%- endif -%}
                      </span>
                    </div>
                  </summary>
                  <div class="disclosure__panel has-motion">
                    <div class="disclosure__content rte">
                      {{ block.settings.text }}
                      {{ block.settings.page.content }}
                      {{ block.settings.custom_liquid }}
                    </div>
                  </div>
                </details>
              </details-disclosure>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'share' -%}
              <div class="product-info__block" {{ block.shopify_attributes }}>
                {% render 'social-share', share_title: product.title, share_url: product.url, share_image: product %}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'richtext' -%}
              {%- if block.settings.text != blank -%}
                {%- liquid
                  if block.settings.enable_box
                    assign box_color_brightness = block.settings.box_color | color_brightness
                    if box_color_brightness > 128
                      assign box_color_saturation = block.settings.box_color | color_extract: 'saturation'
                      if box_color_saturation > 0
                        assign text_col = block.settings.box_color | color_darken: 60 | color_saturate: 30 | color_to_rgb | split: '(' | last | split: ')' | first
                      else
                        assign text_col = block.settings.box_color | color_darken: 60 | color_to_rgb | split: '(' | last | split: ')' | first
                      endif
                    else
                      assign text_col = '255,255,255'
                    endif
                  endif
                  if block.settings.icon_size == 'large'
                    assign icon_size = 60
                  else
                    assign icon_size = 24
                  endif
                -%}
                <div
                  class="product-info__block{% if block.settings.reduce_margin %} product-info__block--tight{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  <div
                    class="flex{% if block.settings.enable_box %} text-box p-4 pe-6{% endif %}"
                    {%- if block.settings.enable_box %}
                      style="--box-color: {{ block.settings.box_color }}; --box-text-color: {{ text_col }}"
                    {% endif %}
                  >
                    {%- if block.settings.icon != 'none' or block.settings.custom_icon != blank -%}
                      <span class="me-4" style="width: {{ icon_size }}px">
                        {%- if block.settings.custom_icon != blank -%}
                          {%- render 'image',
                            image: block.settings.custom_icon,
                            src_width: icon_size,
                            srcset_2x: true
                          -%}
                        {%- elsif block.settings.icon != 'none' -%}
                          {% render 'icon', icon: block.settings.icon, width: icon_size, height: icon_size %}
                        {%- endif -%}
                      </span>
                    {%- endif -%}
                    <div class="rte">{{- block.settings.text -}}</div>
                  </div>
                </div>
              {%- endif -%}
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'image' -%}
              <div class="product-info__block flex {{ block.settings.image_align }}" {{ block.shopify_attributes }}>
                <div class="media relative" style="width: {{ block.settings.image_width }}px;">
                  {%- if block.settings.image != blank -%}
                    {%- if block.settings.url != blank -%}
                      <a href="{{ block.settings.url }}">
                    {%- endif -%}
                    {% render 'image',
                      image: block.settings.image,
                      src_width: block.settings.image_width,
                      srcset_2x: true
                    %}
                    {%- if block.settings.url != blank -%}
                      </a>
                    {%- endif -%}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'media__placeholder' }}
                  {%- endif -%}
                </div>
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'complementary' -%}
              <div class="product-info__block" {{ block.shopify_attributes }}>
                {%- liquid
                  if block.settings.layout == 'carousel'
                    assign grid_classes = 'grid grid-flow-col auto-cols-1 gap-x-theme'
                  else
                    assign grid_classes = 'grid grid-cols-1 gap-y-6'
                  endif
                -%}
                {%- render 'recommendations',
                  intent: 'complementary',
                  products_to_show: block.settings.products_to_show,
                  heading: block.settings.heading,
                  layout: block.settings.layout,
                  related_cards: true,
                  mini_card: true,
                  grid_classes: grid_classes
                -%}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'custom-liquid' -%}
              <div class="product-info__block" {{ block.shopify_attributes }}>
                {{ block.settings.custom_liquid }}
              </div>
              {%- comment -%} ==================== end of block ==================== {%- endcomment -%}

            {%- when 'divider' -%}
              <hr>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>

  {%- if section.settings.description_location == 'below' -%}
    <div class="mt-section mb-section rte reading-width" data-cc-animate>
      {{ product.description }}
    </div>
  {%- endif -%}
</append-modals>

{% render 'structured-data-product', product: product, current_variant: current_variant %}

{% schema %}
{
  "name": "Product details",
  "class": "cc-main-product section-product",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky_columns",
      "label": "Enable sticky columns",
      "default": true
    },
    {
      "type": "header",
      "content": "Media",
      "info": "Learn more about [media types](https://help.shopify.com/en/manual/products/product-media)"
    },
    {
      "type": "select",
      "id": "media_size",
      "label": "Media size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "large"
    },
    {
      "type": "select",
      "id": "media_layout",
      "label": "Desktop layout",
      "info": "Layout is slider on mobile.",
      "options": [
        {
          "value": "stacked",
          "label": "Stacked"
        },
        {
          "value": "slider",
          "label": "Slider"
        }
      ],
      "default": "slider"
    },
    {
      "type": "select",
      "id": "media_thumbs",
      "label": "Show slider thumbnails",
      "options": [
        {
          "value": "never",
          "label": "Never"
        },
        {
          "value": "desktop",
          "label": "Desktop only"
        },
        {
          "value": "always",
          "label": "Always"
        }
      ],
      "default": "desktop"
    },
    {
      "type": "select",
      "id": "media_ratio",
      "label": "Media shape (aspect ratio)",
      "options": [
        {
          "value": "shortest",
          "label": "Adapt (shortest image)"
        },
        {
          "value": "tallest",
          "label": "Adapt (tallest image)"
        },
        {
          "value": "1.33",
          "label": "Landscape"
        },
        {
          "value": "1",
          "label": "Square"
        },
        {
          "value": "0.75",
          "label": "Portrait"
        }
      ],
      "default": "1"
    },
    {
      "type": "checkbox",
      "id": "enable_border",
      "label": "Enable image border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_zoom",
      "label": "Enable image zoom",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Enable video looping",
      "default": false
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "select",
      "id": "description_location",
      "label": "Description location",
      "info": "For 'Details' you will need to add the relevant block ('Description' or 'Collapsible content').",
      "options": [
        {
          "value": "details",
          "label": "Details"
        },
        {
          "value": "below",
          "label": "Below media and details"
        }
      ],
      "default": "details"
    },
    {
      "type": "header",
      "content": "Multiple variant images"
    },
    {
      "type": "checkbox",
      "id": "enable_media_grouping",
      "label": "Show media only associated with the selected variant",
      "info": "Other variants' media will be hidden",
      "default": false
    },
    {
      "type": "text",
      "id": "media_grouping_option",
      "label": "Variant option label",
      "info": "The label used to switch between images",
      "default": "Color,Colour,Couleur,Farbe"
    },
    {
      "type": "paragraph",
      "content": "If your store displays multiple languages, include all translations separated by a comma, e.g. Color,Couleur,Farbe"
    },
    {
      "type": "paragraph",
      "content": "Arrange product media by this option (all 'red' media together, then all 'blue' media together, for example). The first media in each group should be assigned to a variant. [Read more](https://cleancanvas.co.uk/support/alchemy/settings/grouped-variant-images)"
    },
    {
      "type": "paragraph",
      "content": "Add the alt text 'all-groups' to show that media in all groups."
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "buy-buttons",
      "name": "Buy buttons",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_qty_selector",
          "label": "Show quantity selector",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "enable_dynamic_checkout",
          "label": "Show dynamic checkout button",
          "info": "Using the payment methods available on your store, customers see their preferred option, like PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_pickup_availability",
          "label": "Show pickup availability",
          "info": "Show customers where they can pick up the product. [Learn more](https://help.shopify.com/en/manual/shipping/setting-up-and-managing-your-shipping/local-methods/local-pickup)",
          "default": true
